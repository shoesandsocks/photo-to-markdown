<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/head') %>
</head>

<body class="container-fluid">
  <header>
    <%- include('partials/header', {route: route}) %>
  </header>
  <div class="row">
    <main class="col pt-5">

      <p>Make map markers from the following?</p>

      <% if (data.length> 0) { %>
        <button id="marker-btn" class="btn btn-success" type="submit">Okay</button>
        <br />
        <code id="marker-code" class="hidden"><%= JSON.stringify(data, null, 4) %></code>
        <br />
        <% data.forEach(function(obj) { %>
          <div class="for-each-wrap d-flex flex-wrap justify-content-between align-items-center">
            <p>
              <%= obj.filename %>
            </p>
            <img class="processing-image" src="public/photos/<%= obj.filename %>" />
          </div>
          <% }); %>
            <% } else { %>
              <p>Oh hey there's no available photos/data.</p>
              <% }; %>
    </main>
  </div>

  <footer>
    <%- include('./partials/footer %>
  </footer>

  <%- include('partials/bootstrapjs') %>
    <%- include('partials/marker-script') %>
</body>

</html>